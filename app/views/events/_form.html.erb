<%= form_with(model: event, local: true) do |form| %>
  <% if event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= form.hidden_field :user_id, value: current_user.id %>

  <div class="form-group">
    <%= form.label :title %>
    <%= form.text_field :title, class: "form-control rounded-0" %>
  </div>

  <div class="form-group">
    <%= form.label :description %>
    <%= form.text_area :description, class: "form-control rounded-0" %>
  </div>

  <div class="form-group">
    <%= form.label :start_date %>
    <%= form.datetime_select :start_date %>
  </div>

  <div class="form-group">
    <%= form.label :end_date %>
    <%= form.datetime_select :end_date %>
  </div>

  <div class="form-group">
    <%= form.label :members %>
    <%= form.text_field :members, class: "form-control rounded-0" %>
  </div>

  <div class="actions">
    <%= form.submit class: "btn btn-primary rounded-0" %>
    <%= link_to 'Cancel', events_path, class: "btn btn-outline-secondary rounded-0" %>
  </div>
<% end %>
