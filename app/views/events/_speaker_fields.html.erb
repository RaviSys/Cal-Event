<div class="nested-fields">
  <div class="form-group row">
    <div class="col-md-6">
      <%= f.label 'Name' %>
      <%= f.text_field :name, class: "form-control rounded-0", placeholder: "Speaker Name" %>
    </div>
    <div class="col-md-6">
      <%= f.label 'Organization' %>
      <%= f.text_field :organization, class: "form-control rounded-0", placeholder: "Speaker's Organization" %>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-md-4">
      <%= f.label 'City' %>
      <%= f.text_field :city, class: "form-control rounded-0", placeholder: "Speaker City" %>
    </div>
    <div class="col-md-4">
      <%= f.label 'Country' %>
      <%= f.text_field :country, class: "form-control rounded-0", placeholder: "Speaker Country" %>
    </div>
    <div class="col-md-4">
      <%= f.label 'Profile Image' %><br>
      <%= f.file_field :profile_image %>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-md-12">
      <%= f.label 'Speaker Details' %>
      <%= f.text_area :about, class: "form-control rounded-0", placeholder: "About Speaker", rows: "5" %>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-md-3">
      <%= link_to_remove_association "Remove Speaker", f, class: "btn btn-danger rounded-0 mb-3" %>
    </div>
  </div>
</div>
